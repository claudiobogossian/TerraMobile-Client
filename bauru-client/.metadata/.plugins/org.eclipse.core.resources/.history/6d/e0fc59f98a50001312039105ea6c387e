package br.org.funcate.baurudigital.user;

import java.util.ArrayList;
import java.util.List;

import javax.persistence.EntityManager;
import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;
import javax.xml.bind.annotation.XmlRootElement;

import org.codehaus.jackson.type.TypeReference;

import br.org.funcate.baurudigital.common.JPA.HibernateFactory;
import br.org.funcate.baurudigital.common.service.JSONService;

@XmlRootElement
@Path("/users")
@Produces({MediaType.APPLICATION_JSON })
public class UsersRestService
{

	@GET
	@Path("/get")
	@Produces(MediaType.APPLICATION_JSON)
	public List<User> getUsers() {

		List<User> users = UserService.getUsers();		
		return users;

	}
	
	@GET
	@Path("/populatedb")
	public void populateDatabase()
	{
		List<User> user = new ArrayList<User>();
		user = (List<User>) JSONService.parseJSON("/home/bogo/workspace-bauru/bauru-digital/bauru-server/src/main/resources/users.json", new TypeReference<List<User>>() {});
		
		
	}
		
}