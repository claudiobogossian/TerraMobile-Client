                        android:gravity="center_vertical"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/cp_if1t"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="Info 1: "
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:id="@+id/geoform_tr4_lay1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:weightSum="1" >

                            <EditText
                                android:id="@+id/cp_if1"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:enabled="true"
                                android:text="" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/geoform_tr5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:weightSum="1" >

                        <TextView
                            android:id="@+id/cp_if2t"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:text="Info 2:"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:id="@+id/geoform_tr5_lay1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:weightSum="1" >

                            <EditText
                                android:id="@+id/cp_if2"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:enabled="true"
                                android:text="" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/geoform_lay2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/cinza3"
        android:paddingTop="3dp"
        android:weightSum="1" >

        <Button
            android:id="@+id/cp_button_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ico_cancelar"
            android:gravity="center_vertical|left"
            android:text="Cancelar" />

        <Button
            android:id="@+id/cp_button_ok"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/ico_ok"
            android:gravity="center_vertical|left"
            android:text="OK" />
    </LinearLayout>

