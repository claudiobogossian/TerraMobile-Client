package br.org.funcate.baurudigital.server.photo;

import java.io.File;
import java.io.IOException;
import java.io.RandomAccessFile;
import java.util.List;

import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Path;
import javax.ws.rs.QueryParam;
import javax.xml.bind.annotation.XmlRootElement;

@XmlRootElement
@Path("/photos")
public class PhotoRestService
{
	@POST
	public void savePhotos(List<Photo> photos, @QueryParam("user") String userHash) throws PhotoException 
	{
		if (userHash==null) 
		{
			throw new PhotoException("Favor informar o usu√°rio para salvar suas tarefas.");
		}
		if (!photos.isEmpty()) {
			PhotoService.savePhotos(photos, userHash);	
		}
		
	}
	@GET
	public void retrieve() throws IOException 
	{
		String filePath = "/dados/bogo/1379293393_519856642_1-leite-pregomim-pept-Vila-Formosa.jpg";
		
		
		RandomAccessFile f = new RandomAccessFile(filePath, "r");
		byte[] b = new byte[(int)f.length()];
		f.read(b);
		Photo photo = new Photo();
		photo.setBlob(b);
		photo.setPath(filePath);
		
	}
	
		
		
}