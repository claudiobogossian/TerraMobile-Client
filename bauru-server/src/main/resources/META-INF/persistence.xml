<?xml version="1.0" encoding="UTF-8"?>
 <persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="baurudigital-sqlite"
		transaction-type="RESOURCE_LOCAL">
		<properties>
			<!--  property name="hibernate.dialect" value="br.org.funcate.baurudigital.common.JPA.SQLiteDialect" />
			<property name="hibernate.connection.driver_class" value="org.sqlite.JDBC" />
			<property name="hibernate.hbm2ddl.auto" value="create"/>
			<property name="hibernate.connection.url"
				value="jdbc:sqlite:baurudigital.db" /-->
				
				<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"></property>
		        <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"></property>
		        <property name="hibernate.connection.username" value="postgres"></property>
		        <property name="hibernate.connection.password" value="postgres"></property>
		        <property name="hibernate.hbm2ddl.auto" value="update"/>
		        <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/baurudigital"></property>
		</properties>
	</persistence-unit>

</persistence>
 
